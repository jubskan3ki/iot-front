{
	"extends": "@vue/tsconfig/tsconfig.dom.json",
	"include": ["src/env.d.ts", "src/**/*", "src/**/*.vue", "src/**/*.ts", "src/**/*.tsx"],
	"exclude": ["src/**/__tests__/*"],
	"compilerOptions": {
		"composite": true,
		"tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"@components/*": ["./src/components/*"],
			"@views/*": ["./src/views/*"],
			"@stores/*": ["./src/stores/*"],
			"@utils/*": ["./src/utils/*"],
			"@assets/*": ["./src/assets/*"],
			"@types/*": ["./src/types/*"]
		},
		"types": ["node"]
	}
}
